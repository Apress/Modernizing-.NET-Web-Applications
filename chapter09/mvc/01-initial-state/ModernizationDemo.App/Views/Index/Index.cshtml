@model ModernizationDemo.App.Model.ProductListModel

<div class="row row-cols-1 row-cols-md-3 g-4">
    @foreach (var product in Model.Products.Results)
    {
        <div class="col">
            <div class="card h-100">

                <img src="@product.ImageUrl" alt="@product.Name" />

                <div class="card-body">
                    <h5 class="card-title">@product.Name</h5>
                    <p class="card-text">@product.Description</p>
                    <a class="btn btn-primary"
                       href="@Url.Action("Product", new { id = product.Id })">
                        @Model.ProductPrices[product.Id]
                    </a>
                </div>
            </div>
        </div>
    }
</div>

<div class="mt-4 text-center">
    @Html.Partial("../Controls/Pager", Model.PagerModel)
</div>

